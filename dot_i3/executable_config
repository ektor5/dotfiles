#### MODES
set $screen screen: 1 [norm] 2 [work] 3 [work-e] 4 [film] 5 [bunk] 6 [work-se]
mode "$screen" {
        bindsym 1 exec i3-sensible-terminal -e ~/.screenlayout/normal.sh
        bindsym 2 exec i3-sensible-terminal -e ~/.screenlayout/work.sh
        bindsym 3 exec i3-sensible-terminal -e ~/.screenlayout/work-easy.sh
        bindsym 4 exec i3-sensible-terminal -e ~/.screenlayout/film.sh
        bindsym 5 exec i3-sensible-terminal -e ~/.screenlayout/bunker.sh
        bindsym 6 exec i3-sensible-terminal -e ~/.screenlayout/work-se.sh

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Shift+s mode "$screen"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window‚Äôs width.
        # Pressing right will grow the window‚Äôs width.
        # Pressing up will shrink the window‚Äôs height.
        # Pressing down will grow the window‚Äôs height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindcode 113 resize shrink width 10 px or 10 ppt
        bindcode 116 resize grow height 10 px or 10 ppt
        bindcode 111 resize shrink height 10 px or 10 ppt
        bindcode 114 resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

#mount/unmount partitions
set $mount mount: 0: /dev/sdd 1: /dev/sdd1 2: /dev/sdd2 3: /dev/sde1 4: /dev/sde2 5: /dev/mmcblk0p1 6: /dev/mmcblk0p2
mode "$mount" { 
    bindsym 0 exec i3-sensible-terminal -e 'udisksctl mount -b /dev/sdd'
    bindsym 1 exec i3-sensible-terminal -e 'udisksctl mount -b /dev/sdd1'
    bindsym 2 exec i3-sensible-terminal -e 'udisksctl mount -b /dev/sdd2'
    bindsym 3 exec i3-sensible-terminal -e 'udisksctl mount -b /dev/sde1'
    bindsym 4 exec i3-sensible-terminal -e 'udisksctl mount -b /dev/sde2'
    bindsym 5 exec i3-sensible-terminal -e 'udisksctl mount -b /dev/mmcblk0p1'
    bindsym 6 exec i3-sensible-terminal -e 'udisksctl mount -b /dev/mmcblk0p2 '
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+m mode "$mount"

set $unmount unmount: 0: /dev/sdd 1: /dev/sdd1 2: /dev/sdd2 3: /dev/sde1 4: /dev/sde2 5: /dev/mmcblk0p1 6: /dev/mmcblk0p2
mode "$unmount" { 
    bindsym 0 exec i3-sensible-terminal -e 'udisksctl unmount -b /dev/sdd'
    bindsym 1 exec i3-sensible-terminal -e 'udisksctl unmount -b /dev/sdd1'
    bindsym 2 exec i3-sensible-terminal -e 'udisksctl unmount -b /dev/sdd2'
    bindsym 3 exec i3-sensible-terminal -e 'udisksctl unmount -b /dev/sde1'
    bindsym 4 exec i3-sensible-terminal -e 'udisksctl unmount -b /dev/sde2'
    bindsym 5 exec i3-sensible-terminal -e 'udisksctl unmount -b /dev/mmcblk0p1'
    bindsym 6 exec i3-sensible-terminal -e 'udisksctl unmount -b /dev/mmcblk0p2 '
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+m mode "$unmount"

#format things in clipboard
set $format format clipboard: 1: justify 2: column 3: sort 4: wc 5: date
mode "$format" { 
	bindsym 1 exec i3-sensible-terminal -e \
		'bash -c "xsel -b | par | sponge | xsel -b"'
	bindsym 2 exec i3-sensible-terminal -e \
		'bash -c "xsel -b | column -t | sponge | xsel -b"'
	bindsym 3 exec i3-sensible-terminal -e \
		'bash -c "xsel -b | sort | sponge | xsel -b"'
	bindsym 4 exec i3-sensible-terminal -e \
		'bash -c "xsel -b | wc && read"'
	bindsym 5 exec i3-sensible-terminal -e \
		'bash -c "date +%Y%m%d | xsel -b"'
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+Shift+w mode "$format"

bindsym $mod+Shift+d exec i3-sensible-terminal -e \
		'bash -c "date +%Y%m%d | xsel -b"'

